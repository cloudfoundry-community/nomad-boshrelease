#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/nomad/helpers/ctl_setup.sh 'nomad'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    echo "1" >/proc/sys/net/ipv4/ip_forward

    # This is really bad but nomad likes to pick up docker interface.
    # this uses ip that bosh thinks it is and find out interface.
    MY_IP=<%= spec.networks.send(spec.networks.methods(false).first).ip %>
    NETWORK_INTERFACE=$(ifconfig | grep -B 1 ${MY_IP} | grep -v inet | awk '{ print $1 }')
    /bin/sed -i \
    -e "s/REPLACE_NETWORK_INTERFACE/${NETWORK_INTERFACE}/g" \
    /var/vcap/jobs/nomad/config/server.hcl


    exec chpst -u vcap:vcap nomad agent \
         -config /var/vcap/jobs/nomad/config/server.hcl \
         >>$LOG_DIR/$JOB_NAME.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: nomad_ctl {start|stop}"

    ;;

esac
exit 0
