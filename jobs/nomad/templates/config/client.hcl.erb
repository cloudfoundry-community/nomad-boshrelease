client {
  enabled = true
  servers = <%= p('nomad.servers') %>
  options {
    docker.endpoint = "unix:///var/vcap/sys/run/docker/docker.sock"
    consul.address = "<%= spec.networks.send(spec.networks.methods(false).first).ip  %>:8500"
    docker.cleanup.image = "false"
  }
  <% if_p('nomad.meta') do |meta| %>
  meta {
    <% meta.each do |key,value| %>
    "<%= key %>" = "<%= value %>"
  <% end %>
  }
  <% end %>
}
