#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/nomadic-router/helpers/ctl_setup.sh 'nomadic-router'

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # Determine network interface
    MY_IP=<%= spec.networks.send(spec.networks.methods(false).first).ip %>
    NETWORK_INTERFACE=$(ifconfig | grep -B 1 ${MY_IP} | grep -v inet | awk '{ print $1 }')


    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec chpst -u root:root nomadic-router -c ${MY_IP}:8500 -g http://${MY_IP}:4672 -ip ${MY_IP} \
      >>$LOG_DIR/$JOB_NAME.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: nomadic-router_ctl {start|stop}"

    ;;

esac
exit 0
